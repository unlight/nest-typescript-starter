{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "importHelpers": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "incremental": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "~components/*": ["src/components/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts"]
}
